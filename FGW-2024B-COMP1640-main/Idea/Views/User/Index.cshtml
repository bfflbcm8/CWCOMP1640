@model IEnumerable<Idea.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Index";
}

<div class="container FixPaddingBottom">
    <div class="row justify-content-center">
        <div class="col-5 text-center">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <strong>Username:</strong> 
                            <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.UserName)</a>
                        </div>
                        <div>
                            <strong>Full Name:</strong> 
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <a asp-action="AddRole" asp-route-id="@item.Id" class="btn btn-primary btn-icon btn-sm">
                                <i class="fas fa-plus"></i> Add
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-icon btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-icon btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>  
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row justify-content-center mt-3 FixPaddingBottom">
        <div class="col-auto d-flex">
            <a class="btn btn-secondary btn-icon btn-lg me-2" asp-controller="Home" asp-action="Index">
                 Back
            </a>
            <a class="btn btn-primary btn-icon btn-lg" asp-area="Identity" asp-page="/Account/Register">
                 Create New
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 15px;
    }

    .btn-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 40px; /* Adjust as needed */
        height: 40px; /* Adjust as needed */
        margin-bottom: 0; /* Remove bottom margin */
    }

    .btn-icon i {
        margin-right: 5px;
    }

    .me-2 {
        margin-right: 10px; /* Space between buttons */
    }
</style>
