@model Idea.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<h1 class="breadcrumb-item active text-center" aria-current="page">@ViewData["Title"]</h1>

<div class="container">
    <form asp-action="Create" class="row justify-content-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-3">
            <div class="form-group row align-items-center">
                <label asp-for="Name" class="col-sm-2 col-form-label text-right"><strong>Name:</strong></label>
                <div class="col-sm-7">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="col-12 text-center mb-5">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
