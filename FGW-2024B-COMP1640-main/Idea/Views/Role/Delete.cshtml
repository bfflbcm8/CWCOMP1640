@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<h1 class="breadcrumb-item active text-center" aria-current="page">@ViewData["Title"] (<em>@Model.Id</em>)</h1>

<div class="container">
    

    <div class="row justify-content-center">
        <div class="col-4 pl-4 pr-4 mt-5">
            <table class="table text-left mb-4">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
            </table>

            <h6 class="text-center">Are you sure you want to delete this?</h6>

            <form asp-action="Delete" class=" table text-center">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-success mt-2">No</a>
                <input type="submit" value="Yes" class="btn btn-danger mt-2" />
            </form>
        </div>
    </div>
</div>